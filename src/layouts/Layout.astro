---
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>My Portfolio</title>
  </head>
  <body class="bg-black text-white">
    
    <!-- Only render About/Contact if page wants it -->
    {Astro.props.showAbout && (
      <section class="p-6 max-w-4xl mx-auto mt-6 bg-gray-100 dark:bg-gray-900 rounded-lg shadow text-black dark:text-white">
        <h2 class="text-2xl font-bold mb-4">About Me</h2>
        <p class="mb-4">Brief bio goes here.</p>
        <h3 class="font-semibold">Contact</h3>
        <ul class="space-y-1">
          <li>Email: <a href="mailto:you@example.com" class="text-blue-600">you@example.com</a></li>
          <li>Social: <a href="#" class="text-blue-600">Instagram</a>, <a href="#" class="text-blue-600">Twitter</a></li>
        </ul>
      </section>
    )}

    <main>
      <slot />
    </main>
  </body>
</html>
